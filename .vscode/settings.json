{
    "nixfmt.path": "nixpkgs-fmt",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        ".devenv/": true,
        ".direnv/": true
    },
    "files.watcherExclude": {
        "**/target": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "none",
    "nixEnvSelector.nixFile": "${workspaceFolder}/flake.nix"
}